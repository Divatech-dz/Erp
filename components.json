{
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "new-york",
  "rsc": true,
  "tsx": true,
  "tailwind": {
    "config": "tailwind.config.ts",
    "css": "app/globals.css",
    "baseColor": "slate",
    "cssVariables": true,
    "prefix": ""
  },
  "aliases": {
    "components": "@/components",
    "utils": "@/lib/utils",
    "ui": "@/components/ui",
    "lib": "@/lib",
    "hooks": "@/hooks"
  },
    "dependencies": {
        "@radix-ui/react-switch": "^1.1.1",
        "@sentry/nextjs": "^8.35.0",
        "@tanstack/react-query": "^5.59.15",
        "axios": "^1.7.7",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "erp": "file:",
        "lucide-react": "^0.453.0",
        "next": "^15.0.0",
        "punycode": "^2.3.1",
        "query-string": "^9.1.1",
        "react": "^18",
        "react-dom": "^18",
        "react-hook-form": "^7.53.0",
        "recharts": "^2.12.7",
        "shadcn": "^1.0.0",
        "tailwind-merge": "^2.5.2",
        "tailwindcss-animate": "^1.0.7",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.25.8",
        "@babel/preset-react": "^7.25.7",
        "@babel/preset-typescript": "^7.25.7",
        "@testing-library/jest-dom": "^6.6.2",
        "@testing-library/react": "^16.0.1",
        "@types/jest": "^29.5.13",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@types/testing-library__react": "^10.0.1",
        "@typescript-eslint/eslint-plugin": "^8.11.0",
        "@typescript-eslint/parser": "^8.11.0",
        "babel-jest": "^29.7.0",
        "cypress": "^13.15.0",
        "eslint": "^9.13.0",
        "eslint-config-next": "15.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsx-a11y": "^6.10.1",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.1",
        "eslint-plugin-react-hooks": "^5.0.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "lint-staged": "^15.2.10",
        "postcss": "^8",
        "prettier": "3.3.3",
        "tailwindcss": "^3.4.14",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{css,scss}": [
            "stylelint --fix",
            "prettier --write"
        ]
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "format": "prettier --write .",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:update": "jest --updateSnapshot",
        "test:ci": "jest --runInBand --coverage",
        "test:e2e": "cypress run",
        "test:e2e:open": "cypress open",
        "test:e2e:ci": "cypress run --headless",
        "test:e2e:ci:record": "cypress run --record --key $CYPRESS_RECORD_KEY",
        "test:e2e:ci:record:staging": "cypress run --record --key $CYPRESS_RECORD_KEY --env configFile=staging",
        "test:e2e:ci:record:production": "cypress run --record --key $CYPRESS_RECORD_KEY --env configFile=production"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "eslintConfig": {
        "extends": [
            "next",
            "next/core-web-vitals",
            "plugin:prettier/recommended"
        ]
    },
    "stylelint": {
        "extends": "stylelint-config-standard"
    },
    "browserslist": [
        "defaults"
    ]
}
